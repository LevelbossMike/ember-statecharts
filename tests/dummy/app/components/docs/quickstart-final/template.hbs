{{#docs-demo as |demo|}}
  {{#demo.example name="final"}}
    <div class="docs-flex docs-item-center">
      {{!-- BEGIN-SNIPPET quickstart-button-final-used.hbs --}}
      {{#quickstart-button-refined
        onClick=(perform submitTask)
        onSuccess=(action "onSuccess")
        onError=(action "onError")
        onInit=(action (mut statechart))
        disabled=disabled
      }}
        Click me!
      {{/quickstart-button-refined}}
      {{!-- END-SNIPPET --}}
      <div class="docs-ml-8 docs-flex docs-items-center">
        <label for="failRequest-final">
          Fail request?
        </label>
        {{input
          class="docs-ml-2"
          type="checkbox"
          id="failRequest-final"
          name="failRequest"
          checked=failRequest
        }}
      </div>
      <div class="docs-ml-8 docs-flex docs-items-center">
        <label for="disabled-final">
          Disable button?
        </label>
        {{input
          class="docs-ml-2"
          type="checkbox"
          id="disabled-final"
          name="failRequest"
          checked=disabled
        }}
      </div>
    </div>
    <div class="docs-py-4">
      Click the button to see the statechart execute.
    </div>
  {{/demo.example}}
  {{demo.snippet
    "quickstart-button-final.js"
    label="quickstart-button/component.js"
  }}
  {{demo.snippet
    "quickstart-button-final.hbs"
    label="quickstart-button/template.hbs"
  }}
  {{demo.snippet "quickstart-button-final-used.hbs" label="template.hbs" }}
  {{demo.snippet "quickstart-button-final-used.js" label="controller.js" }}
{{/docs-demo}}
