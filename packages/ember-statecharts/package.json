{
  "name": "ember-statecharts",
  "version": "0.14.0",
  "description": "Statecharts for Ember.js applications",
  "keywords": [
    "ember-addon"
  ],
  "homepage": "https://ember-statecharts.com/",
  "repository": "https://github.com/LevelbossMike/ember-statecharts",
  "license": "MIT",
  "author": "",
  "types": "./index.d.ts",
  "directories": {
    "doc": "doc",
    "test": "tests"
  },
  "scripts": {
    "api-docs": "typedoc addon --out ../site/public/api-docs",
    "build": "ember build --environment=production",
    "changelog": "lerna-changelog",
    "lint": "npm-run-all --aggregate-output --continue-on-error --parallel \"lint:!(fix)\"",
    "lint:fix": "npm-run-all --aggregate-output --continue-on-error --parallel lint:*:fix",
    "lint:hbs": "ember-template-lint .",
    "lint:hbs:fix": "ember-template-lint . --fix",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "prepublishOnly": "ember ts:precompile",
    "postpublish": "ember ts:clean",
    "start": "ember serve",
    "test": "npm-run-all lint test:*",
    "test:ember": "ember test --test-port=0",
    "npm-publish": "release-it"
  },
  "dependencies": {
    "ember-cli-babel": "^7.26.6",
    "ember-cli-htmlbars": "^5.7.1",
    "ember-cli-typescript": "^3.1.4"
  },
  "peerDependencies": {
    "xstate": "^4.12.0"
  },
  "devDependencies": {
    "@ember/optional-features": "^2.0.0",
    "@ember/render-modifiers": "^1.0.2",
    "@ember/test-helpers": "^2.4.2",
    "@glimmer/component": "^1.0.4",
    "@glimmer/manager": "^0.83.1",
    "@glimmer/runtime": "^0.83.1",
    "@glimmer/tracking": "^1.0.4",
    "@glimmer/validator": "^0.83.1",
    "@mapbox/rehype-prism": "^0.6.0",
    "@release-it/conventional-changelog": "^1.1.4",
    "@types/ember": "^3.16.5",
    "@types/ember-qunit": "^3.4.9",
    "@types/ember__test-helpers": "^1.7.2",
    "@types/qunit": "^2.9.1",
    "@types/rsvp": "^4.0.3",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "autoprefixer": "^10.2.5",
    "babel-eslint": "^10.1.0",
    "broccoli-asset-rev": "^3.0.0",
    "ember-angle-bracket-invocation-polyfill": "^2.0.2",
    "ember-cli": "~3.28.4",
    "ember-auto-import": "^1.11.3",
    "ember-cli-dependency-checker": "^3.2.0",
    "ember-cli-inject-live-reload": "^2.1.0",
    "ember-cli-sri": "^2.1.1",
    "ember-cli-terser": "^4.0.2",
    "ember-cli-typescript-blueprints": "^3.0.0",
    "ember-concurrency": "^2.3.2",
    "ember-disable-prototype-extensions": "^1.1.3",
    "ember-export-application-global": "^2.0.1",
    "ember-load-initializers": "^2.1.2",
    "ember-maybe-import-regenerator": "^0.1.6",
    "ember-modifier": "^2.1.1",
    "ember-page-title": "^6.2.2",
    "ember-qunit": "^5.1.4",
    "ember-qunit-assert-helpers": "^0.2.2",
    "ember-resolver": "^8.0.2",
    "ember-source": "~3.28.0",
    "ember-template-lint": "^3.6.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-ember": "^10.5.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-qunit": "^6.2.0",
    "loader.js": "^4.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "qunit": "^2.16.0",
    "qunit-dom": "^1.6.0",
    "release-it": "^13.6.2",
    "typedoc": "^0.20.36",
    "typescript": "^4.0.2"
  },
  "engines": {
    "node": "12.* || 14.* || >= 16"
  },
  "changelog": {
    "repo": "levelbossmike/ember-statecharts",
    "labels": {
      ":boom: Breaking": ":boom: Breaking Change",
      "Feature / Enhancement": ":rocket: Feature / Enhancement",
      "Bug": ":bug: Bug Fix",
      "Documentation": ":memo: Documentation",
      "internal": ":house: Internal"
    }
  },
  "ember": {
    "edition": "octane"
  },
  "ember-addon": {
    "configPath": "tests/dummy/config"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md"
      }
    }
  }
}
