<div class='docs'>
  Counter Count: {{this.statechart.state.context.count}}
</div>
<div class='flex justify-between'>
  <div>
    {{#if this.isActive}}
      <UiButton {{on 'click' this.deactivate}}>
        Deactivate
      </UiButton>
    {{else}}
      <UiButton {{on 'click' this.activate}}>
        Activate
      </UiButton>
    {{/if}}
  </div>
  <div>
    <UiButton
      class='{{if this.isDisabled 'cursor-not-allowed opacity-50'}}'
      {{on 'click' this.decrement}}
    >
      -
    </UiButton>
    <UiButton
      class='{{if this.isDisabled 'cursor-not-allowed opacity-50'}}'
      {{on 'click' this.increment}}
    >
      +
    </UiButton>
  </div>
</div>
