{{page-title 'ember-statecharts'}}
<div class='sticky top-0 z-50 h-16 shadow-md bg-ember'>
  <div class='flex h-full px-4 mx-auto sm:px-6 max-w-7xl'>
    <div class='flex items-center mr-4 text-white'>
      <LinkTo @route='index' class='flex items-center'>
        {{svg-jar
          'statecharts'
          width=48
          height=48
          class='fill-none transform translate-y-0.5'
        }}

        <span
          class='ml-2 text-xl font-semibold leading-none md:text-2xl transform -translate-x-1'
        >
          statecharts
        </span>
      </LinkTo>
    </div>
    <div class='flex items-center justify-between flex-grow px-2 md:px-6 overflow-x-scroll'>
      <ul>
        <li>
          <LinkTo
            @route='docs'
            class='pb-1 text-white border-b-2 border-transparent hover:border-white focus:outline-none focus-visible:shadow-outline'
            @activeClass='border-white'
          >
            Documentation
          </LinkTo>
        </li>
      </ul>

      <div class='flex items-center'>
        <VersionsDropdown />
        <a
          href='https://github.com/levelbossmike/ember-statecharts'
          target='_blank'
          rel='noopener noreferrer'
          class='ml-4 text-white md:ml-6 focus:outline-none focus-visible:shadow-outline transform scale-100 hover:scale-110 transition-transform ease-in-out'
        >
          <svg viewBox='0 0 20 20' class='w-8 h-8 fill-current'>
            <title>
              GitHub
            </title>
            <path
              d='M10 0a10 10 0 0 0-3.16 19.49c.5.1.68-.22.68-.48l-.01-1.7c-2.78.6-3.37-1.34-3.37-1.34-.46-1.16-1.11-1.47-1.11-1.47-.9-.62.07-.6.07-.6 1 .07 1.53 1.03 1.53 1.03.9 1.52 2.34 1.08 2.91.83.1-.65.35-1.09.63-1.34-2.22-.25-4.55-1.11-4.55-4.94 0-1.1.39-1.99 1.03-2.69a3.6 3.6 0 0 1 .1-2.64s.84-.27 2.75 1.02a9.58 9.58 0 0 1 5 0c1.91-1.3 2.75-1.02 2.75-1.02.55 1.37.2 2.4.1 2.64.64.7 1.03 1.6 1.03 2.69 0 3.84-2.34 4.68-4.57 4.93.36.31.68.92.68 1.85l-.01 2.75c0 .26.18.58.69.48A10 10 0 0 0 10 0'
            ></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</div>
<div>
  {{outlet}}
</div>
<footer class='bg-gray-50' aria-labelledby='footerHeading'>
  <div class='mx-auto max-w-7xl lg:px-8'>
    <h2 id='footerHeading' class='sr-only'>
      Footer
    </h2>
    <div
      class='max-w-md px-4 pt-12 mx-auto sm:max-w-7xl sm:px-6 lg:pt-16 lg:px-8'
    >
      <div class='xl:grid xl:grid-cols-3 xl:gap-8'>
        <div class='space-y-6 xl:col-span-1'>
          <div class='flex items-center text-gray-500'>
            {{svg-jar
              'statecharts'
              width=36
              height=36
              class='fill-none transform translate-y-0.5'
            }}

            <span
              class='ml-2 text-lg font-semibold leading-none md:text-xl transform -translate-x-1'
            >
              statecharts
            </span>
          </div>
          <p class='text-base text-gray-500'>
            <span class='align-middle'>
              The easiest way to use
            </span>
            <a
              href='https://xstate.js.org/'
              target='_blank'
              rel='noopener noreferrer'
            >
              {{svg-jar
                'xstate'
                class='inline w-16 h-8 align-middle fill-current text-current hover:text-gray-700'
              }}
            </a>
            <strong class='align-middle'>
              statecharts
            </strong>
            <span class='align-middle'>
              in Ember.js applications.
            </span>
          </p>
          <div class='flex space-x-6'>
            <a
              href='https://github.com/LevelbossMike/ember-statecharts'
              target='_blank'
              rel='noreferrer noopener'
              class='text-gray-400 hover:text-gray-500'
            >
              <span class='sr-only'>
                GitHub
              </span>
              <svg
                class='w-6 h-6'
                fill='currentColor'
                viewBox='0 0 24 24'
                aria-hidden='true'
              >
                <path
                  fill-rule='evenodd'
                  d='M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z'
                  clip-rule='evenodd'
                ></path>
              </svg>
            </a>
            <a
              href='https://discord.com/invite/emberjs#e-statecharts'
              target='_blank'
              rel='noreferrer noopener'
              class='text-gray-400 hover:text-gray-500'
            >
              <span class='sr-only'>
                Discord
              </span>
              {{svg-jar 'discord' class='w-6 h-6 fill-current'}}
            </a>
            <div class='text-gray-400' title='Coming Soon'>
              <span class='sr-only'>
                Youtube
              </span>
              {{svg-jar 'youtube' class='w-6 h-6 fill-current'}}
            </div>
          </div>
        </div>
        <div
          class='mt-12 grid grid-cols-1 md:grid-cols-2 gap-8 xl:mt-0 xl:col-span-2'
        >
          <div class='hidden md:grid md:grid-cols-2 md:gap-8'></div>
          <div class='grid grid-cols-2 gap-8'>
            <div>
              <h3
                class='text-sm font-semibold tracking-wider text-gray-400 uppercase'
              >
                Help
              </h3>
              <ul class='mt-4 space-y-4'>
                <li>
                  <LinkTo
                    @route='docs'
                    class='text-base text-gray-500 hover:text-gray-900'
                  >
                    Documentation
                  </LinkTo>
                </li>

                <li>
                  <a
                    href='https://xstate.js.org/docs/'
                    target='_blank'
                    rel='noreferrer noopener'
                    class='flex items-center text-base text-gray-500 hover:text-gray-700'
                  >
                    {{svg-jar
                      'xstate'
                      class='w-16 h-8 fill-current text-current'
                    }}
                    <span>
                      Guides
                    </span>
                  </a>
                </li>
                <li>
                  <a
                    href='https://github.com/LevelbossMike/ember-statecharts'
                    target='_blank'
                    rel='noreferrer noopener'
                    class='text-base text-gray-500 hover:text-gray-900'
                  >
                    GitHub
                  </a>
                </li>

                <li>
                  <a
                    href='https://discord.com/invite/emberjs#e-statecharts'
                    target='_blank'
                    rel='noreferrer noopener'
                    class='text-base text-gray-500 hover:text-gray-900'
                  >
                    Discord
                  </a>
                </li>
              </ul>
            </div>
            <div class='md:mt-0'>
              <h3
                class='text-sm font-semibold tracking-wider text-gray-400 uppercase'
              >
                Support
              </h3>
              <ul class='mt-4 space-y-4'>
                <li>
                  <a
                    href='https://www.effective-ember.com/'
                    target='_blank'
                    rel='noopener noreferrer'
                    class='flex items-center text-base text-gray-500 hover:text-gray-700'
                  >
                    {{svg-jar 'effective-ember' class='w-6 h-6 fill-current'}}
                    <span class='ml-1 font-semibold tracking-tighter'>
                      effective ember
                    </span>
                  </a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <div class='py-8 mt-12 border-t border-gray-200'>
        <p class='text-base text-gray-400 xl:text-center'>
          &copy; 2021
          <span class='font-semibold tracking-tighter'>
            effective ember
          </span>
          . All rights reserved.
        </p>
      </div>
    </div>
  </div>
</footer>
