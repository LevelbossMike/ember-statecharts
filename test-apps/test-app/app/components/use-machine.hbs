<section ...attributes>
  <h1>
    use-machine
  </h1>
  <button type='button' data-test-toggle-button {{on 'click' this.toggle}}>
    Toggle
  </button>

  <button type='button' data-test-self-button {{on 'click' this.self}}>
    Self-transition
  </button>
  <div data-test-content>
    {{#if this.isOn}}
      On
    {{/if}}
    {{#if this.isOff}}
      Off
    {{/if}}
  </div>
  <div data-test-number-of-changes>
    {{this.numberOfChanges}}
  </div>
</section>